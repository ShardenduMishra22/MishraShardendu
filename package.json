{
  "name": "mishrashardendu22",
  "version": "3.0.0",
  "private": true,
  "description": "Monorepo for Shardendu Mishra's portfolio ecosystem - Personal website and admin dashboard.",
  "author": {
    "name": "Shardendu Mishra",
    "email": "mishrashardendu22@gmail.com",
    "url": "https://github.com/ShardenduMishra22"
  },
  "homepage": "https://github.com/ShardenduMishra22/MishraShardendu",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShardenduMishra22/MishraShardendu.git"
  },
  "bugs": {
    "url": "https://github.com/ShardenduMishra22/MishraShardendu/issues"
  },
  "license": "MIT",
  "keywords": [
    "monorepo",
    "portfolio",
    "turborepo",
    "pnpm",
    "nextjs",
    "svelte",
    "vite",
    "typescript",
    "react",
    "preact"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:turbo": "rm -rf .turbo apps/*/.turbo packages/*/.turbo",
    "clean:all": "pnpm clean && pnpm clean:turbo",
    "reset": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/package-lock.json packages/*/package-lock.json pnpm-lock.yaml && pnpm install"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.20.0"
}
