{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "remoteCache": {
    "signature": false
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!**/.next/cache/**", "!**/node_modules/**"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".svelte-kit/**"],
      "cache": true,
      "outputLogs": "hash-only",
      "env": [
        "BETTER_AUTH_URL",
        "BETTER_AUTH_SECRET",
        "BACKEND_1",
        "BACKEND_2",
        "BACKEND_3",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "DATABASE_URL",
        "TURBO_TOKEN",
        "TURBO_TEAM",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_BACKEND_1",
        "NEXT_PUBLIC_BACKEND_2",
        "NEXT_PUBLIC_BACKEND_3",
        "NEXT_PUBLIC_SERVICE_ID",
        "NEXT_PUBLIC_PUBLIC_ID",
        "NEXT_PUBLIC_TEMPLATE_ID"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "proxy": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "cache": true
    }
  },
  "globalDependencies": ["**/.env*", "tsconfig.json"]
}
