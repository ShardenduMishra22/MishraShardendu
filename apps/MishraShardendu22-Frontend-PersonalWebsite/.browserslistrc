/**
 * Browserslist Configuration for Modern JavaScript
 * Reduces bundle size by targeting only modern browsers
 */

module.exports = {
  production: [
    // Modern browsers (reduces legacy JavaScript by ~14KB)
    '>0.5%',
    'not dead',
    'not op_mini all',
    // Explicitly target modern browsers
    'last 2 Chrome versions',
    'last 2 Firefox versions',
    'last 2 Safari versions',
    'last 2 Edge versions',
    // Exclude legacy browsers
    'not IE 11',
    'not IE_Mob 11',
  ],
  development: [
    'last 1 chrome version',
    'last 1 firefox version',
    'last 1 safari version',
  ],
}
